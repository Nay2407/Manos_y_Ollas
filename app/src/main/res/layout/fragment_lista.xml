<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listaolla"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragmentos.ListaFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/espacioolla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">


            <ImageView
                android:id="@+id/forum_icon"
                android:layout_width="55dp"
                android:layout_height="66dp"
                android:src="@drawable/ollita" />


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/forum_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olla Comun Manos de dios "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/forum_supporting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zona: Zarate"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/forum_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Jr. Villac Umo 832"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/espacioolla1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">


            <ImageView
                android:id="@+id/forum_icon1"
                android:layout_width="55dp"
                android:layout_height="66dp"
                android:src="@drawable/ollita" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/forum_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olla Comun Manos de dios "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/forum_supporting_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zona: Zarate"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/forum_counter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Jr. Villac Umo 832"
                    android:textSize="14sp" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


</FrameLayout>