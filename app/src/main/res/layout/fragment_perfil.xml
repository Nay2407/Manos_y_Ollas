<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:foregroundTint="#FFFFFF"
    tools:context=".fragmentos.PerfilFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/vperimgajustes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:src="@drawable/ajustes" />
        </LinearLayout>



        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <FrameLayout
                android:layout_width="210dp"
                android:layout_height="149dp"
                android:layout_gravity="center">


                <ImageView
                    android:id="@+id/vperImagen"
                    android:layout_width="210dp"
                    android:layout_height="118dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cereales" />


                <ImageView
                    android:id="@+id/vperImgEditar"
                    android:layout_width="40dp"
                    android:layout_height="51dp"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="35dp"
                    android:src="@drawable/cambiarfoto" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/perNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="              "
                    android:textColor="@color/black"
                    android:textSize="24sp" />
                <TextView
                    android:id="@+id/perApellido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="                        "
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </LinearLayout>



            <TextView
                android:id="@+id/perCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                "
                android:textColor="#000000" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/vperbtnEditarPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="@string/vperbtnEditPer"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/vperbtnCerrarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="@string/vperbtnCerrarSesion"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPerDona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundColor"
                android:text="Hist. Donaciones"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnPerNoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundColor"
                android:text="Grupos"
                android:textAllCaps="false"
                android:textColor="@color/btnNaranja" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frgContainerCambio"
            android:layout_width="398dp"
            android:layout_height="318dp"
            android:layout_weight="1">


        </FrameLayout>

    </LinearLayout>

</FrameLayout>