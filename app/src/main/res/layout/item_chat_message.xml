<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Imagen de perfil del usuario que envÃ­a el mensaje -->
    <ImageView
        android:id="@+id/imgUserProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/yape_icon"
        android:contentDescription="User Profile Image"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        android:layout_gravity="center_vertical" />

    <!-- Contenedor para el nombre de usuario y el mensaje -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre de usuario -->
        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#333333" />

        <!-- Mensaje con fondo y borde redondeado -->
        <TextView
            android:id="@+id/txtMessageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este es un mensaje"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:maxWidth="280dp" />

        <!-- Timestamp del mensaje -->
        <TextView
            android:id="@+id/txtMessageTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30 PM"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>
