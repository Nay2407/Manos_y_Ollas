<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.MenuFragment"
    app:cardCornerRadius="15dp"
    >
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/frgMenu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/backgroundColor"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/frgPerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:padding="18dp"
                android:layout_gravity="center"
                android:src="@drawable/img_mper"
                android:layout_weight="1"
                android:tint="@color/filtro"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/icperfil"
                android:textColor="@color/black"
                android:gravity="center"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/frgSedes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/img_msed"
            android:layout_weight="1"
            android:tint="@color/filtro"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/icUbicaciones"
            android:textColor="@color/black"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/frgInicio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/img_mhous"
            android:layout_weight="1"
            android:tint="@color/filtro"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ichoma"
            android:textColor="@color/black"
            android:gravity="center"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/frgForos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/img_mcan"
                android:layout_weight="1"
                android:tint="@color/filtro"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/icGrupos"
                android:textColor="@color/black"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/frgDonaciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/img_mdon"
                android:layout_weight="1"
                android:tint="@color/filtro"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/icDonativos"
                android:textColor="@color/black"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>