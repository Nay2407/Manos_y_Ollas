<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragmentos.PerfilChatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_flotante"
                android:layout_width="41dp"
                android:layout_height="43dp"
                android:src="@drawable/ic_volver"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transTxtPlin"
                android:gravity="center"
                android:text="@string/chatPerfilNombre"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chatPerfilDescripcion"
                android:textColor="@android:color/black"
                android:gravity="start"
                />

            <TextView
                android:id="@+id/chatPerfTexDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/chatPerfilTexDescripcion"
                android:textColor="@android:color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp">
            <!--NOTIFICACIONES-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                >
                <ImageButton
                    android:id="@+id/chatPerfNotificacion"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/notificacion"
                    android:layout_marginHorizontal="19dp"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:id="@+id/chatPerfNotificacionTex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chatPerfNotificacionTex"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>
            <!--DONACIONES-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">
                <ImageButton

                    android:id="@+id/chatPerfDonacion"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/dar_dinero"
                    android:layout_marginHorizontal="18dp"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/chatPerfDonacionTex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chatPerfDonacionTex"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>
            <!--AJUSTES-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">
                <ImageButton
                    android:id="@+id/chatPerfAjustes"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/configuraciones"
                    android:layout_marginHorizontal="16dp"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/chatPerfAjustesTex"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/chatPerfAjustesTex"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--Aprobar Publicaciones-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">
                <ImageButton
                    android:id="@+id/chatPerfAprobarPubli"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/aprobado"
                    android:layout_marginHorizontal="18dp"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/chatPerfAprobarPubliTex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chatPerfAprobarPubliTex"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!--Salir del Canal-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">
                <ImageButton
                    android:id="@+id/chatPerfSalir"
                    android:scaleType="fitCenter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/cerrarsesion"
                    android:layout_marginHorizontal="23dp"/>
                <TextView
                    android:layout_marginHorizontal="1dp"
                    android:id="@+id/chatPerfSalirtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chatPerfSalirText"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>