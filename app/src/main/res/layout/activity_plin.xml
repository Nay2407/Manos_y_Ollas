<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.PlinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_flotante"
                android:layout_width="41dp"
                android:layout_height="43dp"
                android:src="@drawable/ic_volver"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transTxtPlin"
                android:gravity="center"
                android:text="@string/transTxtPlin"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/donTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="Escanea el código QR con tu aplicación Plin para completar la donación."
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/iconQr"
                android:layout_width="30000dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="250dp"
                android:src="@drawable/qr" />

            <ImageView
                android:id="@+id/iconYape"
                android:layout_width="3000dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="500dp"
                android:src="@drawable/plin_icon" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <fragment
                android:id="@+id/frgMenu"
                android:name="com.example.manosyollas.fragmentos.MenuFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_menu" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>