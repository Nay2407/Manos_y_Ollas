<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.PerfilChatActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_flotante"
                android:layout_width="41dp"
                android:layout_height="43dp"
                android:src="@drawable/ic_volver"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transTxtPlin"
                android:gravity="center"
                android:text="@string/chatPerfilNombre"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chatPerfilDescripcion"
                android:textColor="@android:color/black"
                android:gravity="start"
                />

            <TextView
                android:id="@+id/chatPerfTexDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/chatPerfilTexDescripcion"
                android:textColor="@android:color/black"
                 />
        </LinearLayout>
        <!--NOTIFICACIONES-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp">
            <ImageButton
                android:id="@+id/chatPerfNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_notificacion" />
            <TextView
                android:id="@+id/chatPerfNotificacionTex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chatPerfNotificacionTex"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>
        <!--DONACIONES-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="2dp">
            <ImageButton
                android:id="@+id/chatPerfDonacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_donacion" />
            <TextView
                android:id="@+id/chatPerfDonacionTex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chatPerfDonacionTex"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>